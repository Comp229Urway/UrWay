<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="jumbotron">
      <h1 class="display-4">Welcome to the <%= title %> page</h1>      
    </div>
    <div class="Middle">
      <h1 class="cover-heading">UrWay Surveys</h1>
      <p class="lead">Let us help you create one simple but pratical survey for your friends</p>
      <p class="lead">
        <a href="#" class="btn btn-lg btn-secondary">Create Survey</a>
      </p>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-8">
          <table class="table">
              <thead class="thead-dark">
                  <tr>
                      <th scope="col">Title</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                  <% for(let i=0; i < surveys.length; i++) { %>
                  <tr>
                      <td><%= surveys[i].title %></td>
                      <td>
                          <a href="surveys/participate/<%= surveys[i]._id %>" class="btn btn-primary btn-sm">Participate</a>
                      </td>
                  </tr>
                  <% } %>
              </tbody>
          </table>
      </div>
  </div>
  </main>
  
  
<%- include partials/bottom_nav.ejs %>  

<%- include partials/footer.ejs %>
  




